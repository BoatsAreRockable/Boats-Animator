{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-undef": "error",
    "no-unused-vars": ["error", {"varsIgnorePattern": "utils"}],
    "strict": ["error", "function"],
    "eqeqeq": ["error", "always"],
    "space-before-function-paren": ["error", {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
    }],
    "valid-jsdoc": ["warn", {
      "prefer": {
        "arg": "param",
        "argument": "param",
        "return": "returns"
      }
    }]
  },
  "globals": {
    "nw": true,
    "utils": true
  }
}